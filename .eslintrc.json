{
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "globals": {
    "window": true,
    "document": true,
    "playa": true,
    "confirm": true,
    "alert": true
  },
  "settings": {
    "import/core-modules": ["electron"]
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "rules" : {
    "import/extensions": "off",
    "no-alert": "off",
    "no-underscore-dangle": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "import/no-extraneous-dependencies": [
      2,
      {
        "devDependencies": true
      }
    ]
  }
}
