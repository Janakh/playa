.sidebar
  width size($sidebarWidth)
  height "calc(100vh - %s)" % 7rem
  backface-visibility hidden
  user-select none
  position absolute
  top $playbackBarHeight
  transition transform .2s ease-in-out
  margin-top size($tabsBarHeight)
  &.sidebar-left
    transform s('translateX(calc(%s - %s))', $sidebarClosedWidth, $sidebarWidth)
    left 0
  &.open
    transform translateX(0)
  .icons
    margin 0
    position absolute
    right 0
    top 0
    padding-top size($sidebarIconSize * .5)
    width size($sidebarClosedWidth)
    li
      width 100%
      text-align center
      a
        .fa
          color $sidebarIconColor
          font-size size($sidebarIconSize)