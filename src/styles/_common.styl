html, body
  min-height 100vh
  height 100%

html
  overflow hidden
  body
    a
      color $mainColor
      transition color .2s ease-in-out
      &:hover, &:visited, &:focus
        color $secondaryColor
        text-decoration none

::-webkit-scrollbar
  display none

#main
  min-height 100vh
  width 100vw
  color $mainColor
  background-color $backgroundColor
  overflow-y auto
  overflow-x hidden
  backface-visibility hidden
  .playa-main
    width 100vw
    padding-top size($playbackBarHeight)
    backface-visibility hidden
    position relative
    &.sidebar-open
      .playa-main-wrapper
        transform translateX(size($sidebarWidth))
    .playa-main-wrapper
      transform translateX(size($sidebarClosedWidth))
      transition transform .2s linear
      backface-visibility hidden
      position absolute
      right 0
      left 0

.btn-transparent
  margin 0
  padding 0
  background-color transparent
  border none
